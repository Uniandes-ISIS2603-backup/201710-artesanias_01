<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="feriaPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <non-jta-data-source>java:app/jdbc/artesanias</non-jta-data-source>
    <class>co.edu.uniandes.csw.artesanias.entities.ComentarioEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.ConferenciaEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.FeriaArtesanalEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.FotoEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.ObraEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.PabellonEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.ReservadoEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.StandEntity</class>
    <class>co.edu.uniandes.csw.artesanias.entities.UsuarioEntity</class>
    <shared-cache-mode>NONE</shared-cache-mode>
    <validation-mode>NONE</validation-mode>
    <properties>
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
      <property name="eclipselink.cache.type.default" value="NONE"/>
    </properties>
  </persistence-unit>
</persistence>
